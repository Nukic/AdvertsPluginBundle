{% extends 'NewscoopNewscoopBundle::admin_layout.html.twig' %}

{% block admin_title %}{{ parent() }} - {{ 'ads.menu.edit'|trans }}{% endblock %}
{% block admin_page_title_content %}{{ 'ads.menu.edit'|trans }}{% endblock %}

{% block admin_stylesheets %}
<style type="text/css">
.plugin-container {
        padding: 10px 10px 30px 10px;
        border: 1px solid #ccc;
        background-color: #FFF;
        font-size: 12px;
    }
</style>
{% endblock %}

{% block admin_content %}
<div class="plugin-container">
{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
{% if form_errors(form) %}
    <div class="alerts alert-danger">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        {{ form_errors(form) }}
    </div>
{% endif %}
{% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alerts alert-success">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            {{ flashMessage }}
        </div>
{% endfor %}
<fieldset>
<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">{{ form_label(form.name) }}</label>
  <div class="col-md-4">
  	{{ form_widget(form.name, {'attr': {'class': 'form-control input-md'}}) }}
  </div>
</div>

<div class="form-group">
  <label class="col-md-4 control-label" for="textarea">{{ form_label(form.description) }}</label>
  <div class="col-md-4">
    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
  </div>
</div>

<div class="form-group">
  <label class="col-md-4 control-label" for="category">{{ form_label(form.category) }}</label>
  <div class="col-md-4">
  {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
  </div>
</div>

<div class="form-group">
  <label class="col-md-4 control-label" for="publication">{{ form_label(form.publication) }}</label>
  <div class="col-md-4">
  {{ form_widget(form.publication, {'attr': {'class': 'form-control'}}) }}
  </div>
</div>

<div class="form-group">
  <label class="col-md-4 control-label" for="user">{{ form_label(form.user) }}</label>
  <div class="col-md-4">
  {{ form_widget(form.user, {'attr': {'class': 'form-control'}}) }}
  </div>
</div>

<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">{{ form_label(form.price) }}</label>
  <div class="col-md-4">
  {{ form_widget(form.price, {'attr': {'class': 'form-control input-md'}}) }}
  </div>
</div>

<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">{{ form_label(form.reads) }}</label>
  <div class="col-md-4">
  {{ form_widget(form.reads, {'attr': {'class': 'form-control input-md'}}) }}
  </div>
</div>

<div class="form-group">
  <label class="col-md-4 control-label" for="singlebutton"></label>
  <div class="col-md-4">
    <button id="singlebutton" name="singlebutton" class="btn btn-success pull-right">{{ 'ads.btn.save'|trans }}</button>
  </div>
</div>

</fieldset>
{{ form_end(form) }}
</div>
{% endblock %}